FROM python:3.10-slim

WORKDIR /app

# Install dependencies
RUN pip install --no-cache-dir fastapi uvicorn pydantic

# Copy the mock vLLM server
COPY mock_vllm_server.py /app/

# Expose the port
EXPOSE 8001

# Run the server
CMD ["python", "-m", "uvicorn", "mock_vllm_server:app", "--host", "0.0.0.0", "--port", "8001"]