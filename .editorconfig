# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Python files
[*.py]
indent_style = space
indent_size = 4
line_length = 88

# JavaScript/React files
[*.{js,jsx,ts,tsx}]
indent_style = space
indent_size = 2

# JSON files
[*.json]
indent_style = space
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false

# Shell scripts
[*.sh]
end_of_line = lf

# Configuration files
[*.{cfg,ini}]
indent_style = space
indent_size = 4

# Ignore files
[*.{log,db,sqlite,sqlite3}]
charset = unset
end_of_line = unset
insert_final_newline = unset
trim_trailing_whitespace = unset
